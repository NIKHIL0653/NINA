# Environment Configuration for NINA Healthcare Assistant

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
HOST=localhost

# ===========================================
# DATABASE CONFIGURATION (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# AI SERVICE CONFIGURATION (OpenRouter)
# ===========================================
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
AI_MODEL=nvidia/nemotron-nano-12b-v2-vl:free

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Encryption key for sensitive data (32 bytes, base64 encoded)
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
HEALTHCARE_DATA_RATE_LIMIT_MAX=10
AI_RATE_LIMIT_MAX=5

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ===========================================
# HIPAA COMPLIANCE
# ===========================================
HIPAA_COMPLIANCE_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_ENABLED=true

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
DEPLOYMENT_ENV=development
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-app.vercel.app

# ===========================================
# VERCEL CONFIGURATION
# ===========================================
VERCEL_URL=https://your-app.vercel.app
VERCEL_ENV=production

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90

# ===========================================
# EMAIL CONFIGURATION (for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# EMERGENCY CONTACT CONFIGURATION
# ===========================================
EMERGENCY_NOTIFICATION_ENABLED=true
EMERGENCY_SMS_ENABLED=true
EMERGENCY_EMAIL_ENABLED=true